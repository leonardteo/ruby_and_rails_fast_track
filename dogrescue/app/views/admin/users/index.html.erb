<h1>Listing users</h1>

<div style="height: 10px;"></div>
<%= link_to 'New User', new_admin_user_path, :class => "btn" %>
<div style="height: 10px;"></div>

<table class="table table-striped table-bordered">
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Email</th>
    <th>Action</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td><%= user.email %></td>
    <td><%= link_to 'Show', admin_user_path(user), :class => 'btn btn-mini' %> <%= link_to 'Edit', edit_admin_user_path(user), :class => 'btn btn-mini' %> <%= link_to 'Destroy', admin_user_path(user), confirm: 'Are you sure?', method: :delete, :class => 'btn btn-mini' %></td>
  </tr>
<% end %>
</table>

<br />

